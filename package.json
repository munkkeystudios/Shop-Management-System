{
  "name": "shop-management-system",
  "version": "1.0.0",
  "description": "Shop Management System with React frontend and Node.js backend",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "electron:dev": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron electron/src/main.js\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "shop",
    "management",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.0",
    "csv-parser": "^3.2.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.3",
    "json2csv": "^6.0.0-alpha.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.487.0",
    "multer": "^1.4.5-lts.2",
    "pdfkit": "^0.17.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.1",
    "react-toastify": "^11.0.5",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.yourdomain.shop-management-system",
    "productName": "Shop Management System",
    "files": [
      "index.js",
      "electron/src/**/*",
      "electron/assets/**/*",
      "frontend/build/**/*",
      "backend/**/*"
    ],
    "directories": {
      "buildResources": "electron/assets",
      "output": "electron/dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  }
}
